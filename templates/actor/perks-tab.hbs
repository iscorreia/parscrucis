<section class="aba-pericias">
  <div class="agrupamento">
    <ul class="grupo-pericias corporais">
      <h3 class="titulo-grupo-per">
        <span class="nome-grupo">Corporais</span>
        <span class="nivel-grupo">N</span>
        <span class="mod-grupo">M</span>
      </h3>
      {{#each config.corporais as |p obj|}}
        {{#with (lookup @root.actor.system.skills obj) as |per|}}
          <li class="pericia">
            <h4 class="nome-pericia">{{p}}</h4>
            <span class="apr-pericia">{{per.aprendizado}}</span>
            <span class="att-pericia">{{per.attribute}}/{{per.growth}}</span>
            <input
              class="val-pericia"
              name="system.skills.{{@key}}.value"
              type="Number"
              value="{{per.value}}"
              data-dtype="Number"
            />
            <input
              class="mod-pericia"
              name="system.skills.{{@key}}.modifiers"
              type="Number"
              value="{{per.modifiers}}"
