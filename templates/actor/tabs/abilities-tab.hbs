<section class="abilities">{{! General Tab }}
  <div class="techniques window">
    <ol class="items-list">
      <li class="item item-header">
        <h3 class="subtitle">
          <div class="item-image"></div>
          <div class="item-name item-margin">{{localize "PC.techniques"}}</div>
          <div class="item-effort item-margin">{{localize "PC.Eff"}}</div>
          <div class="item-info-line">{{localize "PC.Notes"}}</div>
          <div class="item-controls"><a
              class="item-control item-create"
              title="{{localize 'PC.createAbility'}}"
              data-type="ability"
              data-subtype="tech"
            ><i class="fas fa-plus"></i></a>
          </div>
        </h3>
      </li>
      {{#unless techniques}}
        <div class="empty-window">
          {{localize "PC.no"}}
          {{localize "PC.techniques"}}.
        </div>
      {{/unless}}
      {{#each techniques as |item id|}}
        <li class="item item-line" data-item-id="{{item._id}}">
          <div class="item-image">
            <img
              src="{{item.img}}"
              title="{{item.name}}"
              width="24"
              height="24"
            />
          </div>
          <h4
            class="item-name item-margin"
            data-item="{{item.type}}"
            data-item-id="{{item._id}}"
          >
            {{item.name}}
            <span
              class="item-type item-margin"
            >{{item.system.subtypeLabel}}</span>
          </h4>
          <div
            class="item-effort item-margin"
          >{{item.system.actions.0.effort}}</div>
          <input
            class="item-info-line player-notes"
            data-item-update="{{item._id}}"
            data-item-target="system.notes"
            type="text"
            value="{{item.system.notes}}"
            placeholder="{{item.system.informations}}"
          />
          {{! interval }}
          <div class="item-controls">
            <a class="item-control item-edit" title="{{localize 'PC.edit'}}">
              <i class="fas fa-edit"></i>
            </a>
            <a
              class="item-control item-delete"
              title="{{localize 'PC.delete'}}"
            >
              <i class="fa-solid fa-trash-can"></i>
            </a>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>
  <div class="powers window">
    <ol class="items-list">
      <li class="item item-header">
        <h3 class="subtitle">
          <div class="item-image"></div>
          <div class="item-name item-margin">{{localize "PC.powers"}}</div>
          <div class="item-effort item-margin">{{localize "PC.Eff"}}</div>
          <div class="item-info-line">{{localize "PC.Notes"}}</div>
          <div class="item-controls"><a
              class="item-control item-create"
              title="{{localize 'PC.createAbility'}}"
              data-type="ability"
            ><i class="fas fa-plus"></i></a>
          </div>
        </h3>
      </li>
      {{#unless powers}}
        <div class="empty-window">
          {{localize "PC.no"}}
          {{localize "PC.powers"}}.
        </div>
      {{/unless}}
      {{#each powers as |item id|}}
        <li class="item item-line" data-item-id="{{item._id}}">
          <div class="item-image">
            <img
              src="{{item.img}}"
              title="{{item.name}}"
              width="24"
              height="24"
            />
          </div>
          <h4
            class="item-name item-margin"
            data-item="{{item.type}}"
            data-item-id="{{item._id}}"
          >
            {{item.name}}
            <span
              class="item-type item-margin"
            >{{item.system.subtypeLabel}}</span>
          </h4>
          <div
            class="item-effort item-margin"
          >{{item.system.actions.0.effort}}</div>
          <input
            class="item-info-line player-notes"
            data-item-update="{{item._id}}"
            data-item-target="system.notes"
            type="text"
            value="{{item.system.notes}}"
            placeholder="{{item.system.informations}}"
          />
          {{! interval }}
          <div class="item-controls">
            <a class="item-control item-edit" title="{{localize 'PC.edit'}}">
              <i class="fas fa-edit"></i>
            </a>
            <a
              class="item-control item-delete"
              title="{{localize 'PC.delete'}}"
            >
              <i class="fa-solid fa-trash-can"></i>
            </a>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>
</section>