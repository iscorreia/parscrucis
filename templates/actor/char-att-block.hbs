<section class="attributes">
  {{#each config.attributes as |attribute obj|}}
    {{#with (lookup @root.actor.system.attributes obj) as |att|}}
      <div class="attribute">
        <label>
          <h3 class="stat-name">
            <a data-att-key="{{@key}}" data-att-type="attributes">
              {{shortLabel}}
            </a>
          </h3>
        </label>
        <div class="stat">
          <input
            class="stat-value"
            name="system.attributes.{{@key}}.value"
            type="Number"
            value="{{att.value}}"
            data-dtype="Number"
            placeholder="{{att.autoValue}}"
          />
          <input
            class="stat-modifier"
            name="system.attributes.{{@key}}.modifiers"
            type="text"
            value="{{numberFormat att.modifiers sign=true}}"
            data-dtype="Number"
          />
        </div>
      </div>
      <div class="space"></div>
    {{/with}}
  {{/each}}
  <div class="attribute movement">
    <label>
      <h3 class="stat-name">
        <div>{{localize "PC.MV"}}</div>
      </h3>
    </label>
    <div class="stat">
      <input
        class="mov-value"
        name="system.attributes.movement.value"
        type="Number"
        value="{{systemData.attributes.movement.value}}"
        data-dtype="Number"
        placeholder="{{systemData.attributes.movement.autoValue}}"
      />
      <input
        class="stat-modifier mov-modifier"
        name="system.attributes.movement.modifiers"
        type="text"
        value="{{numberFormat
          data.system.attributes.movement.modifiers
          sign=true
        }}"
        data-dtype="Number"
      />
      <span class="mov-arrow">></span>
      <input
        class="stat-modifier sprint"
        name="system.attributes.movement.sprint"
        type="text"
        value="{{systemData.attributes.movement.sprint}}"
        data-dtype="Number"
        placeholder="{{systemData.attributes.movement.autoSprint}}"
      />
    </div>
  </div>
</section>
