      <img src="{{img}}" title="{{name}}" width="24" height="24" />
    </div>
    <h2 class="item-card-title">
      <div>{{name}}</div>
    </h2>
  </section>

  <div class="item-type-info">
    {{system.subgroupLabel}},
    {{system.groupLabel}}
  </div>

  <div class="roll-summary">
    {{{system.description}}}
  </div>
</div>